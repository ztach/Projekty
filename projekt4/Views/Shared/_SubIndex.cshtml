@model List<projekt4.Models.Person>

<section class="card-section">
    @foreach (var os in Model)
    {
        <div class="card card-6">
            <div class="plate">
                @os.Imie @os.Nazwisko
            </div>
            <div class="subcard">
                <p>Wiek: @os.Age</p>
                <p>Email: <a href="http://onet.pl">@os.Email</a> </p>
            </div>
        </div>

    }
</section>

@if (Model.Count() == 0)
{
    <p>
        brak
    </p>
}
else
{
    var i = Model.Count;
    <p>
        Mamy @i element/y/ów na liście "Person"
    </p>
}


